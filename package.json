{
	"name": "serveit",
	"version": "0.1.0",
	"license": "MIT",
	"private": true,
	"scripts": {
		"setup-app": "yarn install --frozen-lockfile",
		"setup-server": "echo \"Download Golang dependencies...\" && go mod download",
		"setup-all": "yarn setup-app && yarn setup-server",
		"upgrade-app": "yarn-upgrade-all && yarn upgrade",
		"upgrade-server": "echo \"Update Golang dependencies...\" && go get -u ./...",
		"upgrade-all": "yarn upgrade-app && yarn upgrade-server",
		"dev": "npm-run-all --parallel dev:backend dev:frontend",
		"dev:frontend": "vite dev --port 3000 --host",
		"dev:backend": "yarn build-server-win && ./dist/serveit",
		"preview": "vite preview --port 8080 --open --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"build-app": "yarn check && yarn vite build",
		"build-server-win": "go env -w CGO_ENABLED=1 && go env -w GOOS=windows && go build -o dist/serveit.exe -buildvcs=false -mod=readonly -v",
		"build-server-lin": "docker run --rm -v ${pwd}:/app -w /app golang:latest sh -c \"GOOS=linux GOARCH=amd64 CGO_ENABLED=1 go build -o dist/serveit_linux\"",
		"build-win": "yarn build-app && yarn build-server-win",
		"build-lin": "yarn build-app && yarn build-server-lin",
		"serve": "open-cli http://localhost:8080 && ./dist/serveit",
		"serve-win": "open-cli http://localhost:8080 && ./dist/serveit",
		"docker": "docker build . -t svelte-ts-go -f Dockerfile",
		"docker-run": "open-cli http://localhost:8080 && docker run -p 8080:8080 --rm svelte-ts-go",
		"commit": "yarn format && git pull origin main && git add . && git commit -m \"Updating\" && git push origin main"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"flowbite": "^2.5.2",
		"flowbite-svelte": "^0.47.4",
		"open-cli": "^8.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^6.0.6",
		"yarn-upgrade-all": "^0.7.4"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/open-sans": "^5.1.1",
		"cron-validator": "^1.3.1",
		"cronstrue": "^2.52.0",
		"flowbite-svelte-icons": "^2.0.2",
		"moment": "^2.30.1",
		"npm-run-all": "^4.1.5",
		"picomatch": "^4.0.2",
		"strip-ansi": "^7.1.0",
		"yaml": "^2.6.1"
	}
}
